@page 
@model Project.Pages.Admin.DeleteRoom

@{
    ViewData["Title"] = "DeleteRoom";
}
@{
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1 class="title">@ViewData["Title"]</h1>
<main >
<div class="container">
    <h3>Are you sure you want to delete this?</h3>
    <dl class="row">
        <dt class="col-sm-2">
            Room Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelitem => Model.Rooms.Summary)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelitem => Model.Rooms.Description)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Rooms.Id" />
        <input type="submit" value="Delete" class="btn-danger" /> |
        <a asp-page="/Admin/SelectRoom">Back to List</a>
    </form>
</div>
</main>