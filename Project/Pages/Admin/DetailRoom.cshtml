@page
@model Project.Pages.Admin.DetailRoom
@{
    ViewData["Title"] = "DetailRoom";
}
@{
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1 class="title">@ViewData["Title"]</h1>
<main>
<div class="container">
    <div>
    <h3>Are you sure you want to delete this?</h3>
    <dl class="row">
        <dt class="col-sm-2">
            Room Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelitem => Model.Rooms.Summary)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelitem => Model.Rooms.Description)
        </dd>
    </dl>
        <table class="table">
    <thead>
        <tr>
            <th>
                Event Name
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.events.Items) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Summary)
            </td>
            <td>
                @Html.DisplayFor(modelItem =>item.Start.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.End.DateTime)
            </td>
            <td>
                <a asp-page="/Admin/DeleteEvent" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-page="/Admin/SelectRoom">Back to List</a>
    </div>
</div>
</main>