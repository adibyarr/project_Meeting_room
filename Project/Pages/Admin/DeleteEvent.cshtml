@page
@model Project.Pages.Admin.DeleteEvent
@{
    ViewData["Title"] = "DeleteEvent";
}

<h1 class="title">@ViewData["Title"]</h1>
<main>
<div class="container">
        <h3>Are you sure you want to delete this?</h3>
    <dl class="row">
        <dt class="col-sm-2">
            Event Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelitem => Model.eventName )
        </dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="eventId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="/Admin/SelectRoom">Back to List</a>
    </form>
</div>
</main>