@page
@model Project.Pages.User.Booking
@{
    ViewData["Title"] = "Booking Admin";
}

<h1 class="title">@ViewData["Title"]</h1>

<div class="container">
    <div class="container3">

    <div class="container1">
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Title Event</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Title">
        </div>
        <div>
            <label>Room</label>
            <select asp-items="Model.Rooms" class="form-select" aria-label="Default select example">
                <option selected>--Select Room--</option>
            </select>

        </div>
    </div>

     <div class="container2">
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Start Date</label>
                <input type="datetime-local" class="form-control" id="exampleFormControlInput1" >
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">End Date</label>
                <input type="datetime-local" class="form-control" id="exampleFormControlInput1" >
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Location</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="location">
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Atendee</label>
                <input type="Email" class="form-control" id="exampleFormControlInput1" placeholder="email">
            </div>
        </div>

   
</div>
 <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Description</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
</div>
<div class="mb-3 btn">
    <button type="Submit" class="btn-blue">Booking</button>
</div>

</div>